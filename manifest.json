{

  "manifest_version": 2,
  "name": "Smokescreen",
  "version": "1.0",

  "description": "redirects web pages",

  "icons": {
    "48": "icons/border-48.png"
  },

  "options_ui": {
    "page": "options.html"
  },
  
  "browser_action": {
    "default_icon": {
      "16": "icons/page-16.png",
      "32": "icons/page-32.png"
    }
  },

  "content_scripts": [
    {
      "matches": ["http://*/*","https://*/*"],
      "js": ["js/smokescreen.js"]
    }
  ],

  "background": {

    "scripts":["overlord.js"]
  },
  "permissions": [
    "tabs", "webNavigation","storage", "webRequest", "webRequestBlocking","https://*/*","http://*/*"
  ]

}
