{

  "manifest_version": 2,
  "name": "Smokescreen",
  "version": "1.0",

  "description": "redirects web pages",

  "icons": {
    "48": "icons/border-48.png"
  },

  "options_ui": {
    "page": "options.html"
  },

  "content_scripts": [
    {
      "matches": ["http://*/*","https://*/*"],
      "js": ["js/smokescreen.js"]
    }
  ],

  "background": {

    "scripts":["overlord.js"]
  },
  "permissions": [
    "tabs","https://*/*","http://*/*","webNavigation","storage"
  ]

}
